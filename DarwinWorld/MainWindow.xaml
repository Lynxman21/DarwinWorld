<Window x:Class="DarwinWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DarwinWorld"
        mc:Ignorable="d"
        Title="DarwinWorld" Height="450" Width="800">
    <Grid>
        <Button Content="Start" FontSize="20" HorizontalAlignment="Center" Margin="0,268,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.524,0.593" Height="50" Width="120" Click="Button_Click"/>
        <TextBox x:Name="startEnergy" HorizontalAlignment="Left" Margin="244,108,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="reproductionCost" HorizontalAlignment="Left" Margin="438,163,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="width" HorizontalAlignment="Left" Margin="244,50,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="animalCount" HorizontalAlignment="Left" Margin="244,217,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="genomLen" HorizontalAlignment="Left" Margin="244,163,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="plantEnergy" HorizontalAlignment="Left" Margin="438,108,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="height" HorizontalAlignment="Left" Margin="438,50,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="120"/>
        <Label Content="Width" HorizontalAlignment="Left" Margin="244,24,0,0" VerticalAlignment="Top"/>
        <Label Content="Height" HorizontalAlignment="Left" Margin="438,24,0,0" VerticalAlignment="Top"/>
        <Label Content="Animal start energy" HorizontalAlignment="Left" Margin="244,82,0,0" VerticalAlignment="Top"/>
        <Label Content="Plant energy" HorizontalAlignment="Left" Margin="438,82,0,0" VerticalAlignment="Top"/>
        <Label Content="Length of genom" HorizontalAlignment="Left" Margin="244,137,0,0" VerticalAlignment="Top"/>
        <Label Content="Reproduction cost" HorizontalAlignment="Left" Margin="438,137,0,0" VerticalAlignment="Top"/>
        <Label Content="Start count of animals" HorizontalAlignment="Left" Margin="244,191,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="plantsCount" HorizontalAlignment="Left" Margin="438,217,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="120"/>
        <Label Content="Start count of plants" HorizontalAlignment="Left" Margin="438,191,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
